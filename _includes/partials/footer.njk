{% set isHome = page.fileSlug === "" %}

<footer>
	<div class="flex">
		<nav aria-label="Site">
			<ul>
				<li>
					<a href="/{{ pages.about.path }}">
						<b>About →</b>
					</a>
				</li>
				<li>
					<a href="/{{ pages.articles.path }}">
						<b>Articles →</b>
					</a>
				</li>
				<li>
					<a href="/{{ pages.blog.path }}">
						<b>Blog →</b>
					</a>
				</li>
				<li>
					<a href="/{{ pages.lessons.path }}">
						<b>Life lessons →</b>
					</a>
				</li>
				<li>
					<a href="/{{ pages.projects.path }}">
						<b>Projects {{ "↑" if isHome else "→" }}</b>
