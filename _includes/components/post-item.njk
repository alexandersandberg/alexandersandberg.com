{% from 'components/decorative-link.njk' import decorativeLink %}

{% macro postItem(type, item) %}
	<article class="separator-xl">
		{% set link = "/" + pages[type].path + item.slug + "/" %}
		<h2>
			<a href="{{ link }}">{{ item.title }}</a>
		</h2>
		<div class="spacer-xs"></div>
		<p class="subhead foreground-tertiary">
			<time title="{{ item.createdAt }}">{{ item.createdAt | postDateFromString }}</time>
		</p>
		{% if item.excerpt %}
			<div class="spacer-m"></div>
			<p>{{ item.excerpt }}</p>
		{% endif %}
		<div class="spacer-l"></div>
		<div class="row-centered">
			<a class="dont-break-words truncate" href="{{ link }}">Read {{ "article" if type == "articles" else "post"}} â†’</a>
			{{ decorativeLink(link, "#" + item.id | pad(3)) }}
		</div>
	</article>
{% endmacro %}