{% macro lessonsList(lessons, articleClass = "") %}
	{% for lesson in lessons %}
		<article {% if articleClass %}class="{{ articleClass }}"{% endif %}>
			{% set link = "/" + pages.lessons.path + lesson.id + "/" %}
			<a href="{{ link }}">
				<p>{{ lesson.body }}</p>
				{# TODO: Truncate body to 4(?) lines if possible #}
			</a>
			<div class="spacer-s"></div>
			<div class="row-centered">
				<span class="foreground-tertiary dont-break-words truncate">â€” {{ lesson.source }}</span>
				<div class="spacer-s"></div>
				<a href="{{ link }}" aria-hidden="true" tabindex="-1">
					<span class="body mono background-secondary dont-break-words">#{{ lesson.id | pad(3) }}</span>
				</a>
			</div>
		</article>
	{% endfor %}
{% endmacro %}