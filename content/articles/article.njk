---
layout: layouts/page.njk
pagination:
  data: articles
  size: 1
  alias: article
  addAllPagesToCollections: true
permalink: "{{ pages.articles.path }}/{{ article.slug }}/"
tags: feed
isPost: true
ogTemplate: post
eleventyComputed:
  itemNumber: " - Article #{{ article.id | pad(3) }}"
  title: "{{ article.title | safe }}"
  description: "{{ article.excerpt | safe }}"
  publishedDate: "{{ article.createdAt }}"
  updatedDate: "{{ article.updatedAt }}"
---

{% markdownToHtmlString article.body %}

{% include "partials/post-footer.njk" %}