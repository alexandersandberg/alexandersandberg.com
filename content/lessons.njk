{% from 'components/lessons-list.njk' import lessonsList %}

{% for category in lessonCategories %}
	{% set categoryLessons = lessons | withCategorySlug(category.slug) %}

	{% if categoryLessons.length > 0 %}
		<a href="/{{ pages.lessons.path }}{{ category.slug }}"><h2>{{ category.title }} ({{ categoryLessons.length }})</h2></a>

		{{ lessonsList(categoryLessons | head(2)) }}

		<p><a href="/{{ pages.lessons.path }}{{ category.slug }}">See all lessons →</a></p>
	{% endif %}
{% endfor %}
